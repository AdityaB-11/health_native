rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ==================== HELPER FUNCTIONS ====================
    
    // Check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Check if user is admin
    function isAdmin() {
      return isSignedIn() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Check if user owns the resource
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // ==================== USERS COLLECTION ====================
    
    match /users/{userId} {
      // Anyone authenticated can read user data
      allow read: if isSignedIn();
      
      // Users can only create/update their own profile
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isOwner(userId) || isAdmin();
      
      // Only admins can delete users
      allow delete: if isAdmin();
    }
    
    // ==================== DOCTORS COLLECTION ====================
    
    match /doctors/{doctorId} {
      // Everyone can read doctor information (public directory)
      allow read: if true;
      
      // Only admins can create, update, or delete doctors
      allow create, update, delete: if isAdmin();
    }
    
    // ==================== MEDICINES COLLECTION ====================
    
    match /medicines/{medicineId} {
      // Everyone can read medicines (public catalog)
      allow read: if true;
      
      // Only admins can manage medicines
      allow create, update, delete: if isAdmin();
    }
    
    // ==================== ARTICLES COLLECTION ====================
    
    match /articles/{articleId} {
      // Everyone can read health articles (public content)
      allow read: if true;
      
      // Only admins can publish/edit/delete articles
      allow create, update, delete: if isAdmin();
    }
    
    // ==================== PATIENTS COLLECTION ====================
    
    match /patients/{patientId} {
      // Only admins can access patient records (HIPAA compliance)
      allow read, write: if isAdmin();
    }
    
    // ==================== LAB REPORTS COLLECTION ====================
    
    match /labReports/{reportId} {
      // Only admins can access lab reports (HIPAA compliance)
      allow read, write: if isAdmin();
    }
    
    // ==================== DEFAULT DENY ====================
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
